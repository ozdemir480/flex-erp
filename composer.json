{
    "name": "flex-erp/mvc-skeleton",
    "description": "Minimal MVC skeleton",
    "type": "project",
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "vimeo/psalm": "^5.16",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "scripts": {
        "start": "php -S 127.0.0.1:8000 -t public",
        "cs": "php-cs-fixer fix -v",
        "stan": "psalm",
        "test": "phpunit"
    }
}
